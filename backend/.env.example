# ================================================= #
# ***************** Django 核心配置 **************** #
# ================================================= #

# SECURITY WARNING: keep the secret key used in production secret!
# 生成新密钥: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# 允许的主机列表，生产环境必须设置具体域名，多个用逗号分隔
# 例如: ALLOWED_HOSTS=example.com,www.example.com
ALLOWED_HOSTS=*

# ================================================= #
# ***************** 数据库配置 ********************* #
# ================================================= #

# 数据库类型: MYSQL / SQLITE3 / POSTGRESQL
DATABASE_TYPE=POSTGRESQL

# 数据库连接信息
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-database-password-here
DATABASE_NAME=leeadmin

# ================================================= #
# ***************** Redis 配置 ********************* #
# ================================================= #

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# ================================================= #
# ***************** CORS 跨域配置 ****************** #
# ================================================= #

# 生产环境必须设置为 False，并配置 CORS_ALLOWED_ORIGINS
CORS_ORIGIN_ALLOW_ALL=False

# 允许的跨域源，多个用逗号分隔
# 例如: CORS_ALLOWED_ORIGINS=https://example.com,https://www.example.com
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://127.0.0.1:8081

# ================================================= #
# ***************** 业务配置 *********************** #
# ================================================= #

# 是否只允许单用户单点登录
IS_SINGLE_TOKEN=False

# 是否为演示模式（演示模式只读）
IS_DEMO=False

# 是否开启前端API访问
ALLOW_FRONTEND=True

# 域名配置（用于图片上传URL前缀）
DOMAIN_HOST=http://127.0.0.1:8000

# ================================================= #
# ***************** 日志配置 *********************** #
# ================================================= #

# 是否启用API日志
API_LOG_ENABLE=True

# ================================================= #
# ***************** 安全配置 *********************** #
# ================================================= #

# 登录失败限制次数（0表示不限制）
LOGIN_ERROR_RETRY_TIMES=5

# 登录失败锁定时间（秒）
LOGIN_ERROR_RETRY_TIMEOUT=300

# 是否启用权限缓存
CUSTOM_PERMISSION_CACHE=True
CUSTOM_PERMISSION_CACHE_TIME=3600

# 是否启用数据权限缓存
DATA_FILTER_CACHE=True
DATA_FILTER_CACHE_TIME=3600

# 是否启用字段权限缓存
FIELD_PERMISSION_CACHE=True
